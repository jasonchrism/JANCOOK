<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical"
        tools:context=".ProfileActivity">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/backBtn"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="21sp" />
        </RelativeLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical"
        tools:context=".ProfileActivity"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">


        <ImageView
            android:id="@+id/useravatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/rounded_image"
            android:scaleType="centerCrop"
            android:src="@drawable/useravatar"
            android:clipToOutline="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="16dp"
            />
        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:text="John Doeloe"
            android:inputType="text"
            android:fontFamily="@font/poppins"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/edittext_rounded"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:text="John Doeloe Maksimus"
            android:inputType="text"
            android:fontFamily="@font/poppins"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:text="johndoeloe@example.com"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/poppins"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/bioEditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Bio"
            android:text="Ratunya dapur dengan bahan andalan ayam"
            android:inputType="text"
            android:fontFamily="@font/poppins"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:gravity="top|start"
            android:background="@drawable/edittext_rounded"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:text="+6281293737162"
            android:inputType="number"
            android:fontFamily="@font/poppins"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/BirthdayEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Birthday"
            android:text="12-12-2002"
            android:inputType="date"
            android:fontFamily="@font/poppins"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded"/>



        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/poppins_semibold"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginBottom="50dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
